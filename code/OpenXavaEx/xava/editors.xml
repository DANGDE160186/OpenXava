        <formatter class="org.openxava.ex.formatter.DateFormatter" />
        <for-type type="java.util.Date" />
    </editor>
    <editor name="DateTimeCalendar" url="../../xava-ex/editors/dateTimeCombinedCalendarEditor-yyyyMMddHHmmss.jsp">
        <formatter class="org.openxava.ex.formatter.SqlTimestampFormatter" />
        <for-type type="java.sql.Timestamp" />
    </editor>

